{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                // or "CommonJS" if your users use require()
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./types",      // for types
    "outDir": "./dist",               // where JS output goes
    "rootDir": "./src",               // your source directory
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}